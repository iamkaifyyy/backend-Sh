<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-zinc-900">
    <h1 class="text-white text-4xl p-5">Welcome to X.com</h1>

    <div class="main w-full min-h-screen">
      <!-- FORM -->
      <div class="form p-10 text-white">
        <form action="/create" method="POST" class="space-y-3">
          <input
            type="text"
            placeholder="Title goes here"
            class="block w-full px-4 py-2 bg-zinc-800 rounded-md outline-none"
          />

          <textarea
            name="details"
            placeholder="Write tasks"
            class="block w-full px-4 py-2 resize-none bg-zinc-800 rounded-md outline-none"
            rows="4"
          ></textarea>

          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <!-- TASKS -->
      <div class="tasks flex flex-wrap p-10 gap-3">
        <% if (files.length > 0) { %> <% files.forEach(function(val) { %>

        <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-2xl font-semibold tracking-tight">
            <%= val.title %>
          </h1>
          <a
            class="text-blue-500 inline-block mt-3"
            href="/read/<%= val.filename %>"
          >
            Read More
          </a>
        </div>

        <% }) %> <% } else { %>

        <h3 class="text-zinc-600 text-lg">No tasks here yet</h3>

        <% } %>
      </div>
    </div>
  </body>
</html>
